{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/review-ops/team-members-schema",
  "title": "Team Members Configuration",
  "description": "Configuration file defining development team members for stale PR tracking",
  "type": "array",
  "minItems": 1,
  "items": {
    "type": "object",
    "required": ["github_username"],
    "properties": {
      "github_username": {
        "type": "string",
        "description": "GitHub username of the team member",
        "minLength": 1,
        "pattern": "^[a-zA-Z0-9]([a-zA-Z0-9-]*[a-zA-Z0-9])?$",
        "examples": ["alice", "bob-smith", "dev123"]
      },
      "slack_user_id": {
        "type": "string",
        "description": "Slack user ID for @mentions (format: U + 10 alphanumeric characters). If not provided, plain text username will be used in Slack messages.",
        "pattern": "^U[A-Z0-9]{10}$",
        "examples": ["U1234567890", "UABCDEFGHIJ"]
      }
    },
    "additionalProperties": false
  },
  "examples": [
    [
      {
        "github_username": "alice",
        "slack_user_id": "U1234567890"
      },
      {
        "github_username": "bob"
      },
      {
        "github_username": "charlie-dev",
        "slack_user_id": "U0987654321"
      }
    ]
  ]
}
