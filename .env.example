# GitHub Configuration (REQUIRED)
# Note: GH_TOKEN (not GITHUB_TOKEN) is used for compatibility with GitHub CLI (gh)
GH_TOKEN=ghp_your_github_personal_access_token_here
GITHUB_ORG=your-org-name

# Slack Configuration (REQUIRED for normal mode, optional for --dry-run mode)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Optional: Language for Slack reports (default: en)
# Supported values:
#   - en: English (default)
#   - ko: Korean (한국어)
# Example: LANGUAGE=ko
LANGUAGE=en

# Optional Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL (default: INFO)
API_TIMEOUT=30  # API request timeout in seconds (default: 30)
GH_SEARCH_LIMIT=1000  # Maximum PRs per search query (default: 1000)

# --- Rate Limiting Configuration ---

# Maximum total PRs to display across all categories (default: 30, range: 10-100)
# Higher values show more PRs but consume more API quota
MAX_PRS_TOTAL=30

# Maximum retry attempts for rate limit errors (default: 3, range: 1-5)
# More retries = more resilient but slower failure detection
MAX_RETRIES=3

# Maximum auto-wait time in seconds (default: 300 = 5 minutes, range: 60-600)
# If rate limit resets within this threshold, app waits automatically
# If beyond threshold, app fails fast with error
RATE_LIMIT_WAIT_THRESHOLD=300

# Base backoff duration for exponential retry (default: 1.0, range: 0.5-2.0)
# Formula: wait_time = base * (2 ^ attempt)
# Example with base=1.0: 1s, 2s, 4s
# Example with base=0.5: 0.5s, 1s, 2s
RETRY_BACKOFF_BASE=1.0

# Enable GraphQL batch fetching for PR details (default: true)
# Reduces API calls by 60-70% compared to individual REST calls
# Set to false to fall back to REST API if GraphQL causes issues
USE_GRAPHQL_BATCH=true

# Delay between API calls in seconds to prevent secondary rate limits (default: 2.0, range: 0.0-10.0)
# Adds a brief pause between GitHub search operations to avoid triggering secondary rate limits
# Recommended: 2.0 seconds for typical usage, increase to 3-5 if hitting rate limits frequently
# Set to 0.0 to disable delays (not recommended - may trigger secondary rate limits)
API_CALL_DELAY=2.0
